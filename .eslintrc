{
	"parser": "babel-eslint",
	"rules": {
		// discouraging bugs
			"comma-dangle": [2, "never"],
			"no-cond-assign": 2,
			"no-dupe-args": 2,
			"no-dupe-keys": 2,
			"valid-typeof": 2,
			"use-isnan": 2,
			"no-eq-null": 2,
			"eqeqeq": [2, "smart"],
			"no-octal": 2,
			"no-unreachable": 2,
			"no-sparse-arrays": 2,
			"no-redeclare": 2,
			"no-self-compare": 2, 
			"no-duplicate-case": 2,
		// discouraging variable trouble
			"no-use-before-define": [2, "nofunc"],
			"no-unused-vars": [2, {"vars": "local", "args": "none"}],
			"no-undef": 2,
			"no-shadow-restricted-names": 2,
			"no-shadow": 2,
		// discouraging bad practice
			"no-inner-declarations": 1,
			"no-func-assign": 1,
			"no-fallthrough": 1,
			"consistent-return": 1,
			"no-else-return": 1,
			"no-delete-var": 1,
		// sweeping up the dust
			"camelcase": 1,
			"dot-notation": 1,
			"no-extra-semi": 1,
			"no-extra-parens": 1,
			"indent": [1, "tab"],
			"no-constant-condition": 1,
			"no-irregular-whitespace": 1,
			"no-warning-comments": 0 // remove in production code
	},
	env: {
		"browser": true,
		"node": true
	}
}

